{
  "scripts": {
    "dev": "wrangler dev --local --assets ./public --log-level",
    "dev:css": "tailwindcss -i ./app/app.css -o ./public/app.css --watch",
    "deploy": "tailwindcss -i ./app/app.css -o ./public/app.css --minify && wrangler deploy --assets ./public"
  },
  "dependencies": {
    "hono": "^3.3.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "tailwindcss": "^3.3.3",
    "wrangler": "^3.1.2"
  }
}
